@model HASHEM_ASSESSMENT_PROJECT.DATA.DTO.GSComplaintsDTO

@{
    ViewData["Title"] = "STATION OWNERS";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<p>&nbsp;</p>
<div id="area" class="area">
    <div class="cover">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center" style="margin-bottom:50px;">
                    <h2 style="color:#006600">Vehicle Owner Complaints Details</h2>
                    <hr />
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form enctype="multipart/form-data" asp-action="GasStationOwners">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="BusinessName" class="control-label col-sm-2"></label>
                            <div class="col-sm-10">
                                <input asp-for="BusinessName" class="form-control" placeholder="Enter Company Name" />
                                <span asp-validation-for="BusinessName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="SupplyDate" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="SupplyDate" class="form-control" type="date" />
                                <span asp-validation-for="SupplyDate" class="text-danger"></span>
                            </div>
                            <label asp-for="TotalQuantityRecieved" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="TotalQuantityRecieved" class="form-control col-sm-4" type="number" />
                                <span asp-validation-for="TotalQuantityRecieved" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="SupplyLocation" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="SupplyLocation" class="form-control" placeholder="Gas Supply Location" />
                                <span asp-validation-for="SupplyLocation" class="text-danger"></span>
                            </div>
                            <label asp-for="SupplyInvoiceUrl" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input type="file" asp-for="SupplyInvoiceUrl" class="form-control" />
                                <span asp-validation-for="SupplyInvoiceUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="text-right" style="padding-top:50px;">
                            <input type="submit" value="Submit Complaint" class="btn btn-success text-center col-sm-3" style="padding:10px;" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@if (TempData["success"] != null)
{
    <script>
        swal('SUCCESS!', '@TempData["success"].ToString()!','success')
    </script>
}

@if (TempData["failed"] != null)
{
    <script>
        swal('FAILED!', '@TempData["failed"].ToString()!','error')
    </script>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
