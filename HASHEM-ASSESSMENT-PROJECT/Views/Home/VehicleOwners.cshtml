@model HASHEM_ASSESSMENT_PROJECT.DATA.DTO.VOComplaintDTO

@{
    ViewData["Title"] = "VEHICLE OWNERS";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<p>&nbsp;</p>
<div id="area" class="area">
    <div class="cover">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center" style="margin-bottom:50px;">
                    <h2 style="color:#006600">Vehicle Owner Complaints Details</h2>
                    <hr />
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form enctype="multipart/form-data" asp-action="VehicleOwners">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="FirstName" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <label asp-for="LastName" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="VehicleType" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="VehicleType" class="form-control" placeholder="Private Or Commercial" />
                                <span asp-validation-for="VehicleType" class="text-danger"></span>
                            </div>
                            <label asp-for="VehicleOwnershipProofUrl" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input type="file" asp-for="VehicleOwnershipProofUrl" class="form-control" />
                                <span asp-validation-for="VehicleOwnershipProofUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="FuelPurhcaseDate" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="FuelPurhcaseDate" class="form-control" type="date" />
                                <span asp-validation-for="FuelPurhcaseDate" class="text-danger"></span>
                            </div>
                            <label asp-for="GasStationName" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="GasStationName" class="form-control" placeholder="Fuel Station Name" />
                                <span asp-validation-for="GasStationName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="PurchaseReceipt" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input type="file" asp-for="PurchaseReceipt" class="form-control" />
                                <span asp-validation-for="PurchaseReceipt" class="text-danger"></span>
                            </div>
                            <label asp-for="PurchaseOutlet" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="PurchaseOutlet" class="form-control" placeholder="Purchase Outlet Name" />
                                <span asp-validation-for="PurchaseOutlet" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LitresPurchase" class="control-label col-sm-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="LitresPurchase" class="form-control col-sm-4" type="number" />
                                <span asp-validation-for="LitresPurchase" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 text-right"> <input type="submit" value="Submit Complaints" class="btn btn-success" /></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["success"] != null)
{
    <script>
        swal('SUCCESS!', '@TempData["success"].ToString()!','success')
    </script>
}

@if (TempData["failed"] != null)
{
    <script>
        swal('FAILED!', '@TempData["failed"].ToString()!','error')
    </script>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
